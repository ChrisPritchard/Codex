<Window x:Class="Codex.Views.TableOfContents"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Codex.Views"
        mc:Ignorable="d"
        Title="TableOfContents" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="SceneTemplate">
            <Border BorderThickness="2" BorderBrush="Blue">
                <StackPanel>
                    <TextBlock Text="{Binding WordCount}" />
                </StackPanel>
            </Border>
        </DataTemplate>
        <HierarchicalDataTemplate x:Key="ChapterTemplate" ItemsSource="{Binding Scenes}" ItemTemplate="{StaticResource SceneTemplate}">
            <Border BorderThickness="2" BorderBrush="Green">
                <StackPanel>
                    <TextBlock Text="{Binding Title}" />
                </StackPanel>
            </Border>
        </HierarchicalDataTemplate>
        <HierarchicalDataTemplate x:Key="ActTemplate" ItemsSource="{Binding Chapters}" ItemTemplate="{StaticResource ChapterTemplate}">
            <Border BorderThickness="2" BorderBrush="Red">
                <StackPanel>
                    <TextBlock Text="{Binding Title}" />
                </StackPanel>
            </Border>
        </HierarchicalDataTemplate>
    </Window.Resources>
    <Grid>
        <TreeView ItemsSource="{Binding Acts}" ItemTemplate="{StaticResource ActTemplate}">
            <TreeView.ItemContainerStyle>
                <Style TargetType="{x:Type TreeViewItem}">
                    <Setter Property="IsExpanded" Value="True"/>
                </Style>
            </TreeView.ItemContainerStyle>
        </TreeView>
    </Grid>
</Window>
