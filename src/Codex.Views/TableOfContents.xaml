<Window x:Class="Codex.Views.TableOfContents"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Codex.Views"
        mc:Ignorable="d"
        Title="TableOfContents" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="SharedStyles.xaml" />
                <ResourceDictionary>
                    <DataTemplate x:Key="SceneTemplate">
                        <Grid HorizontalAlignment="Center">
                            <TextBlock Text="{Binding WordCount}" FontSize="10" HorizontalAlignment="Center" />
                        </Grid>
                    </DataTemplate>

                    <DataTemplate x:Key="ChapterTemplate">
                        <StackPanel HorizontalAlignment="Stretch">
                            <TextBlock Text="{Binding Title}" FontSize="15" HorizontalAlignment="Center" />
                            <ItemsControl ItemsSource="{Binding Scenes}" ItemTemplate="{StaticResource SceneTemplate}" />
                        </StackPanel>
                    </DataTemplate>

                    <DataTemplate x:Key="ActTemplate">
                        <StackPanel HorizontalAlignment="Stretch">
                            <TextBlock Text="{Binding Title}" FontSize="20" HorizontalAlignment="Center" />
                            <ItemsControl ItemsSource="{Binding Chapters}" ItemTemplate="{StaticResource ChapterTemplate}" />
                        </StackPanel>
                    </DataTemplate>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <ItemsControl 
            ItemsSource="{Binding Acts}" 
            ItemTemplate="{StaticResource ActTemplate}" 
            HorizontalAlignment="Stretch"
            BorderThickness="0">
        </ItemsControl>
    </Grid>
</Window>
