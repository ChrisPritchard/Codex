<Window x:Class="Codex.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Codex.Views"
        mc:Ignorable="d"
        Title="Codex" Height="800" Width="600" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="CanResize">
    <Window.Resources>
        <Style x:Key="FadeFocus" TargetType="{x:Type FrameworkElement}">
            <Style.Triggers>
                <EventTrigger RoutedEvent="Control.MouseEnter">
                    <BeginStoryboard>
                        <Storyboard >
                            <DoubleAnimation Duration="0:0:0.2" To="1" Storyboard.TargetProperty="Opacity"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="Control.MouseLeave">
                    <BeginStoryboard>
                        <Storyboard >
                            <DoubleAnimation Duration="0:0:0.2" To="0.4" Storyboard.TargetProperty="Opacity"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel 
                Orientation="Horizontal"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top"   >
            <Button
                Style="{StaticResource FadeFocus}" 
                Click="Save_Click" 
                Opacity="0.4" 
                Width="30" Height="30" 
                Margin="0,0,0,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="S" TextAlignment="Center" FontSize="16" FontWeight="Bold" />
                </StackPanel>
            </Button>
            <Button
                Style="{StaticResource FadeFocus}" 
                Click="Load_Click" 
                Opacity="0.4" 
                Width="30" Height="30" 
                Margin="0,0,0,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="L" TextAlignment="Center" FontSize="16" FontWeight="Bold" />
                </StackPanel>
            </Button>
        </StackPanel>
        <Button
                Style="{StaticResource FadeFocus}" 
                Command="{Binding Quit}"
                Opacity="0.4" 
                Width="30" Height="30" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top"                 
                Margin="0,0,0,0">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="Transparent">
                        <ContentPresenter/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="X" TextAlignment="Center" FontSize="16" FontWeight="Bold" />
            </StackPanel>
        </Button>
        <local:BindableRichTextBox x:Name="MainText" 
                     Margin="50,50,50,50"
                     XamlContent="{Binding XamlContent, Mode=TwoWay}">
        </local:BindableRichTextBox>
        <TextBlock x:Name="WordCount"
                   Style="{StaticResource FadeFocus}" 
                   Opacity="0.4"
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Bottom"
                   Margin="5"
                   Text="0 words" />
        <TextBlock x:Name="Saving"
                   Style="{StaticResource FadeFocus}" 
                   Opacity="0.4"
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Bottom"
                   Margin="5"
                   Text="" />
    </Grid>
</Window>
