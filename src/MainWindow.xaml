<Window x:Class="Codex.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Codex"
        mc:Ignorable="d"
        Title="Codex" Height="800" Width="600" WindowStyle="None">
    <Grid>
        <RichTextBox x:Name="richTextBox" 
                     Margin="100,50,100,50" 
                     BorderThickness="0" 
                     SpellCheck.IsEnabled="True" TextChanged="RichTextBox_TextChanged">
            <FlowDocument FontFamily="Arial" FontSize="16" LineHeight="24" />
        </RichTextBox>
    </Grid>
</Window>
